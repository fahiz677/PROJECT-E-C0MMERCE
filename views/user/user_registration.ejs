<main class="main">
    <section class="pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 m-auto">
                    <div class="row" style="display: flex;justify-content: center;">
                        <div class="col-lg-1"></div>
                        <div class="col-lg-6">
